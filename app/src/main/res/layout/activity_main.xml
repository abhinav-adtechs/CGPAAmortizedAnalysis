<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="abhinav.hackdev.co.amortizedanalysis.MainActivity">

    <abhinav.hackdev.co.amortizedanalysis.CustomViewPager
        android:elevation="7dp"
        android:paddingBottom="3dp"
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
    </abhinav.hackdev.co.amortizedanalysis.CustomViewPager>

    <com.pixelcan.inkpageindicator.InkPageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:dotDiameter="8dp"
        app:dotGap="8dp"
        app:animationDuration="320"
        app:pageIndicatorColor="@color/midnight_blue"
        app:currentPageIndicatorColor="@color/colorPrimary"
        android:layout_weight="1"
        />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-10dp"
        android:padding="0dp"
        />

    <TextView
        android:id="@+id/estimated_gpa"
        android:text="EXPLORE THE WORLD, GET ABOVE 9 :)"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textSize="20dp"
        />



</LinearLayout>
