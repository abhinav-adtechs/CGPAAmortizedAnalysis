<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="abhinav.hackdev.co.amortizedanalysis.MainActivity">

    <com.pixelcan.inkpageindicator.InkPageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:dotDiameter="8dp"
        app:dotGap="8dp"
        app:animationDuration="320"
        app:pageIndicatorColor="@color/colorAccent"
        app:currentPageIndicatorColor="@color/colorAccent"
        android:layout_weight="1"
        />

   <abhinav.hackdev.co.amortizedanalysis.CustomViewPager
       android:id="@+id/main_viewpager"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="10">
   </abhinav.hackdev.co.amortizedanalysis.CustomViewPager>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/button_custom"
        android:layout_marginTop="3dp">


        <TextView
            android:id="@+id/estimated_gpa"
            android:text="YOUR ESTIMATED GPA SHOULD BE 9.33"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textSize="20dp"
            />

    </android.support.v7.widget.CardView>




</LinearLayout>
